extends layout

block scripts
	script(type='text/javascript', src='/javascripts/jquery.min.js')
	script(type='text/javascript', src='/socket.io/socket.io.js')
	script(type='text/javascript', src='/javascripts/game-script.js')

block content
	div#gameContainer
		div#nameEntry
			input#username(type='text', placeholder='username')
			button#nameEntryButton start game!
		div#game
			canvas#gameCanvas(width='640', height='480', tabindex='0')
				p Your browser doesn't support canvas
